{{! comment in handlebars }}
<h1>Home Page</h1>
<p>Goto About Page: <a href="/about" data-about-id="about">About</a></p>
<section>
    {{> weather}}
</section>
<section>
    <ul>
        {{#each tours}}
        <li>
            {{name}} - {{price}}
            {{#if ../currencies}}
            ({{../currency.abbrev}})
            {{/if}}
        </li>
        {{/each}}
    </ul>
    {{#unless currencies}}
    <p>All prices in {{currency.name}}.</p>
    {{/unless}}
    {{#if specialUrl}}
    <p>Check out our <a href="{{specialUrl}}">specials</a></p>
    {{else}}
    <p>Please check back often for specials.</p>
    {{/if}}
    <p>
        {{#each currencies}}
        <a href="#" class="currency">{{.}}</a>
        {{else}}
        Unfortunately, we currently only accept {{currency.name}}.
        {{/each}}
    </p>
</section>